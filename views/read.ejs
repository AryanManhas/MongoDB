<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white">
    <div>
      <a class="text-blue-500" href="/">Back to Home</a>
    </div>
    
    <h1 class="text-3xl mt-10 tracking-tighter mb-3">All Users</h1>

    <div class="users flex gap-3 flex-wrap">
      <% if (users.length > 0) { %>
        <% users.forEach((user) => { %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-72 bg-zinc-700 rounded-lg overflow-hidden">
              <img class="w-full h-full object-top object-cover" src="<%= user.image %>" alt="Image can't be loaded" />
            </div>
            <h3 class="text-xl tracking-tight mt-3"><%= user.name%></h3>
            <h5 class="text-zinc-500"><%= user.email%></h5>
            <div class="flex gap-3 mt-2">
              <a class="text-zinc-200" href="#">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-500">No users yet</h3>
      <% } %>
    </div>
  </div>
</body>
</html>

